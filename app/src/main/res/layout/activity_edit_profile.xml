<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5E7"
    android:padding="24dp"
    tools:context=".screen.EditProfileActivity">

    <TextView
        android:id="@+id/textViewEditProfileTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bionic_comic"
        android:text="Profile"
        android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
        android:textColor="#3e2700"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textFieldEditName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textFieldEditName"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:hint="Name"
        android:textColorHint="#757575"
        app:boxStrokeColor="#3e2700"
        app:hintTextColor="#3e2700"
        app:layout_constraintTop_toBottomOf="@id/textViewEditProfileTitle"
        app:layout_constraintBottom_toTopOf="@+id/textFieldViewRollNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:startIconTint="#3e2700">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextEditName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:textColor="#3e2700"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textFieldViewRollNumber"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Roll Number"
        android:textColorHint="#757575"
        app:boxStrokeColor="#757575"
        app:hintTextColor="#3e2700"
        app:layout_constraintTop_toBottomOf="@id/textFieldEditName"
        app:layout_constraintBottom_toTopOf="@+id/buttonSaveChanges"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:startIconTint="#3e2700">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editTextStaticRollNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:focusable="false"
        android:longClickable="false"
        android:textColor="@color/material_on_surface_disabled"
        android:maxLines="1" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonSaveChanges"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="Update"
        android:textColor="#fff4e7"
        android:textSize="18sp"
        app:backgroundTint="#f2b158"
        app:cornerRadius="8dp"
        app:strokeColor="#3e2700"
        app:strokeWidth="3dp"
        app:layout_constraintTop_toBottomOf="@id/textFieldViewRollNumber"
        app:layout_constraintBottom_toTopOf="@+id/buttonSignOut"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonSignOut"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="Sign Out"
        android:textColor="#fff4e7"
        android:textSize="18sp"
        app:backgroundTint="#f2b158"
        app:cornerRadius="8dp"
        app:strokeColor="#3e2700"
        app:strokeWidth="3dp"
        app:layout_constraintTop_toBottomOf="@id/buttonSaveChanges"
        app:layout_constraintBottom_toTopOf="@+id/buttonDeleteAccount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonDeleteAccount"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="Delete Account"
        android:textColor="#D32F2F"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/buttonSignOut"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8" />

</androidx.constraintlayout.widget.ConstraintLayout>
