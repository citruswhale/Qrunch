<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5E7"
    tools:context=".screen.HomeActivity">

    <TextView
        android:id="@+id/textViewQR"
        android:layout_width="149dp"
        android:layout_height="34dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/bionic_comic"
        android:text="My QR:"
        android:textColor="#3e2700"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageViewQR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.087"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.058"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/imageViewQR"
        android:layout_width="365dp"
        android:layout_height="402dp"
        android:layout_marginTop="32dp"
        android:contentDescription="Food Image"
        android:src="@drawable/app_logo"
        app:layout_constraintBottom_toTopOf="@id/textViewQR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonViewMenu"
        app:layout_constraintVertical_bias="0.532"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonViewMenu"
        android:layout_width="325dp"
        android:layout_height="64dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="50dp"
        android:paddingStart="24dp"
        android:paddingTop="12dp"
        android:paddingEnd="24dp"
        android:paddingBottom="12dp"
        android:text="View Menu"
        android:textColor="#fff4e7"
        android:textSize="24sp"
        app:backgroundTint="#f2b158"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewQR"
        app:layout_constraintVertical_bias="1.0"
        app:strokeColor="#3e2700"
        app:strokeWidth="3dp" />
</androidx.constraintlayout.widget.ConstraintLayout>